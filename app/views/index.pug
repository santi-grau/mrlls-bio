doctype
html
  head
    meta(charset='utf-8')
    meta(http-equiv='Content-Type',content='text/html; charset=utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
    title Project title
    link(rel='stylesheet', id='mainStylesheet' href='../css/main.styl')
  body
    #main


    #settings
      
      .setting
        label.title Playing
        span.toggle
          input#playToggle( name = 'playing' type = 'checkbox' checked = 'true' )
          label( for = "playToggle" )
      .setting
        label.title Density
        input( name = 'density' type = 'range' min = '0' max = '32' step = '1' value = '8'  )
      //- .setting
      //-   label.title Spread-x
      //-   input( name = 'spreadx' type = 'range' min = '0' max = '1' step = '0.001' value = '0.6'  )
      .setting
        label.title Spread-y
        input( name = 'spready' type = 'range' min = '0' max = '2' step = '0.001' value = '0.2'  )
      .setting
        label.title Hue
        input( name = 'hue' type = 'range' min = '0' max = '1' step = '0.001' value = '0.2'  )
      .setting
        label.title Saturation
        input( name = 'saturation' type = 'range' min = '0' max = '1' step = '0.001' value = '0.9'  )
      .setting
        label.title Divergence
        input( name = 'divergence' type = 'range' min = '0' max = '0.3' step = '0.001' value = '0.1'  )
      .setting( style='margin-top:8px')
        label.title Background
        input( name = 'bgcolor' type="color" value="#000000" )
      //- .setting
      //-   button Clear

    script(src='../js/main.js')