html, body
    height 100%
    padding 0
    margin 0
    overflow hidden
    
body
    font-family 'IBM Plex Sans', sans-serif
    font-size 11px
    background #000000
    color #ffffff
    &.darkmode
        background #ffffff
        color #000000
        button
            border-color #999999
            color #000000
            &:hover
                border-color #000000
                background #000000
                color #ffffff
#main
    width 100vw
    height 100vh
    position fixed

#settings
    position relative
    margin 20px
    z-index 1
    .setting
        height 25px
        margin-bottom 1px
        .title
            display inline-block
            width 80px

button
    all unset
    border solid 1px
    cursor pointer
    border-radius 13px
    display inline-block
    padding 6px 12px
    margin-right 5px
    border-color #666666
    color #ffffff
    &:hover
        border-color #ffffff
        background #ffffff
        color #000000

input[type=range]
    position relative
    width 127px
    top 4px

input[type="color"]
	-webkit-appearance none
	border none
	width 120px
	height 12px
    

input[type="color"]::-webkit-color-swatch-wrapper
	padding 0

input[type="color"]::-webkit-color-swatch
	border none
    

input[type="color" i]
    padding 1px

input[type=radio]
    position relative
    top 2px
    margin-right 10px

#animateButton
    position fixed
    bottom 20px
    left 20px
    display none
    &.active
        display block

.toggle
    position relative
    left -5px
    top 5px
    input
        height 0
        width 0
        visibility hidden
    label
        cursor pointer
        text-indent -9999px
        width 30px
        height 15px
        background grey
        display inline-block
        border-radius 100px
        position relative

    label:after
        content ''
        position absolute
        top 1px
        left 1px
        width 13px
        height 13px
        background #fff
        border-radius 13px
        transition 0.3s

    input:checked + label:after
        left calc(100% - 1px)
        transform translateX(-100%)

    input:checked + label
        background #0000ff

.picker
    display inline-block
    box-shadow 0 2px 2px 0 rgba(0,0,0,0.16), 0 0 0 1px rgba(3, 1, 1, 0.08)