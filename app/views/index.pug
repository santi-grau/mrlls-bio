    #main


    #settings
      
      .setting
        label.title Playing
        //- .picker( acp-color="#EFE9E7" acp-show-rgb="no" acp-show-hsl="no" acp-show-hex="yes" acp-show-alpha="no" )
        span.toggle
          input#playToggle( name = 'playing' type = 'checkbox' checked = 'true' )
