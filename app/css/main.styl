html, body
    height 100%
    padding 0
    margin 0
    overflow hidden
    
body
    font-family 'IBM Plex Sans', sans-serif
    font-size 11px
    background #111111
    color #333333
    transition color 0.4s
    &.recording
        #settings
            display none
        #captureProgress
            opacity 1
            pointer-events auto
    &.darkmode
        color #aaaaaa
        input[type=text]
            border solid 1px #aaaaaa
            background rgba( 0, 0, 0, 0 )
        input[type=range]
            border solid 1px #aaaaaa
            &::-webkit-slider-thumb
                background #dedede
        input[type=color]
            &::-webkit-color-swatch-wrapper
                border solid 1px #aaaaaa
        input[type=radio]
            border solid 1px #aaaaaa
            &:checked
                background #dedede
    
#main
    width 100vw
    height 100vh
    position fixed
    top 50%
    left 50%
    transform translate3d( -50%, -50%, 0 )
    overflow hidden
    &.framed
        border solid 1px rgba( 255, 255, 255, 0.5 )
    &.bioplayer
        width 50vw
        height 50vh
        position relative
        top auto
        left auto
        transform none

#t1
    width 50vw
    height 50vh
    position absolute
    top 0
    left 50vw
#t2
    width 100vw
    height 50vh
    position absolute
    top 50vh
    left 0

#captureProgress
    opacity 0
    pointer-events none
    position fixed
    top 0 
    left 0
    width 100vw
    height 100vh
    z-index 10
    background rgba( 0, 0, 0, 0.6 )
    .inner
        text-align center
        width 320px
        position absolute
        top 50%
        left 50%
        transform translate3d( -50%, -50%, 0 )
        padding-bottom 20px
        border-bottom solid 1px rgba( 255, 255, 255, 0.3 )
        .title
            padding-bottom 20px
            margin-bottom 20px
            border-bottom solid 1px rgba( 255, 255, 255, 0.3 )
        .progress
            margin-top 10px
            .name
                display inline-block
                width 100px
                height 12px
                text-align left
            .bar
                padding 5px 0
                display inline-block
                width calc( 100% - 102px )
                background rgba( 0, 0, 0, 0.2 )
                border solid 1px rgba( 255, 255, 255, 0.3 )
                border-radius 10px
                overflow hidden
                position relative
                top 3px
                .perc
                    transition width 0.2s
                    position absolute
                    top 0
                    left 0
                    width 0%
                    height 100%
                    background rgba( 255, 255, 255, 0.8 )
#settings
    position absolute
    // background rgba( 255, 0, 0, 1 )
    padding 20px
    height calc( 100vh - 40px )
    width calc( 100vw - 40px )
    z-index 1
    .setting
        height 25px
        margin-bottom 1px
        .title
            display inline-block
            width 70px
        .ratioLabel
            display inline-block
            width 37px

button
    -webkit-appearance none
    border solid 1px
    cursor pointer
    border-radius 13px
    display inline-block
    padding 6px 12px
    margin-right 5px
    border-color inherit
    color inherit
    background none
    margin-top 5px
    &:hover
        border-color #ffffff
        background #ffffff
        color #000000

input[type=radio]
    -webkit-appearance none
    height 15px
    width 15px
    top 4px
    
    border solid 1px #666666
    border-radius 20px
    margin 0
    margin-left 0
    padding 0
    outline none
    position relative
    margin-right 6px
    &:checked
        background #222222
        
input[type=color]
    -webkit-appearance none
    border none
    width 131px
    height 17px
    position relative
    border-radius 15px
    top 4px
    border 0 !important
    border-color: transparent;
    box-shadow inset 0 0 5px #000000
    margin 0
    outline none !important
    margin-top 0 !important
    padding 0
    &:focus
        outline none !important
        background-color rgba(0,0,0,0) !important
        &::-webkit-color-swatch-wrapper
            outline none
        &::-webkit-color-swatch
            outline none
    &::-webkit-color-swatch-wrapper
        -webkit-appearance none
        padding 0
        border-radius 10px
        margin-top 0 !important
        border solid 1px #666666
        outline none !important

    &::-webkit-color-swatch
        margin-top 0 !important
        -webkit-appearance none
        border none !important
        background #00ff00
        color #00ff00
        border solid 1px #00ff00
        border-radius 15px
        outline none !important
        box-shadow inset 0 0 2px rgba( 0, 0, 0, 0.4 )


input[type=range]
    -webkit-appearance none
    height 15px
    margin 0
    padding 0
    outline none
    position relative
    width 127px
    top 4px
    left 0
    
    border-radius 10px
    background none
    border solid 1px #666666
    cursor pointer !important
    padding-right 2px
    &.max
        position absolute
    &::-webkit-slider-thumb
        -webkit-appearance none
        appearance none
        width 13px
        height 13px
        border-radius 10px
        background #222222
        cursor pointer !important
        pointer-events all
        position relative
        // transform translateY( 0.5px )
        z-index 1
        outline 0
        left 1px


input[type=text]
    border none
    background-color rgba( 255, 255, 255, 0 ) !important
    color inherit
    font-size inherit
    width 112px
    height 17px
    -webkit-box-shadow none
    box-shadow none
    -webkit-border-radius 20px
    -moz-border-radius 20px
    border-radius 20px
    padding 0px 8px
    top 1px
    position relative
    border solid 1px #666666
    &.ratioInput
        width 20px
    &:focus
        outline none
    
#animateButton
    position fixed
    bottom 20px
    left 20px
    display none
    &.active
        display block

.toggle
    position relative
    left -5px
    top 5px
    input
        height 0
        width 0
        visibility hidden
    label
        cursor pointer
        text-indent -9999px
        width 30px
        height 15px
        background grey
        display inline-block
        border-radius 100px
        position relative

    label:after
        content ''
        position absolute
        top 1px
        left 1px
        width 13px
        height 13px
        background #fff
        border-radius 13px
        transition 0.3s

    input:checked + label:after
        left calc(100% - 1px)
        transform translateX(-100%)

    input:checked + label
        background #0000ff

.valueShow
    -webkit-appearance none
    width 50px
    margin-left 10px
    font-size 10px
    background none 
    border none
    color inherit
    &:focus
        border none
        outline-width 0

#botButs
    position absolute
    left 20px
    bottom 20px

