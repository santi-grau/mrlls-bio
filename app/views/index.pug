        input( name = 'hue' type = 'range' min = '0' max = '1' step = '0.001' value = '0.2'  )
      .setting
        label.title Divergence
        input( name = 'divergence' type = 'range' min = '0' max = '0.3' step = '0.001' value = '0.1'  )
      
